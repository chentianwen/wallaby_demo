<div class="panel panel-default" style="margin: 50px auto; width: 300px">
  <div class="card">
    <div class="card-header">
      Wallaby Admin
    </div>
    <div class="card-body">
      <div class="card-title">Welcome to Wallaby Admin Demo site.</div>
      <p class="card-text">The username and password are already filled, please just click the <b>Sign in</b> button.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, value: 'admin@wallaby.rails', autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, value: 'password', autocomplete: "off", class: "form-control" %>
        </div>
        <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="card-footer">
      <small class="text-muted">NOTE: Data is reset daily on this site.</small>
    </div>
  </div>
</div>
